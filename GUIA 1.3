    direccion_emp,
    LENGTH(direccion_emp), --TE DICE CUANTAS LETRS TIENE ESA FRASE O ORACION
    RPAD(direccion_emp,32,'*'),
    LPAD(direccion_emp,32,'*'),
    
    
