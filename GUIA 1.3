---UPPER, LOWER , INTICAP Y SUS USOS
SELECT
    UPPER(pnombre_emp), --LLEVA TODO A MAYUSCULAS
    UPPER(snombre_emp),
    LOWER(appaterno_emp), --LLEVA TODO A MINUSCULAS
    INITCAP(apmaterno_emp) --LA PRIMERA LETRA EN MAYUSCULAS Y LAS DEMAS EN MINUSCULAS(NOMBRE PROPIO)
FROM 
    empleado
;
    
